    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/btnNextFromGuessWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/next"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:fontFamily="@font/cronus_round"
        android:backgroundTint="#4e0707"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvAboveChoices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/above_choices"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:fontFamily="@font/cronus_round"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/glChoices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBelowChoices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/below_choices"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:fontFamily="@font/cronus_round"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnNextFromGuessWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/glChoices" />
</androidx.constraintlayout.widget.ConstraintLayout>